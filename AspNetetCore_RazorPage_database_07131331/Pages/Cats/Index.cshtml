<body style="background: rgba(0, 9, 59, 0.85);">
    
    <nav class="n" style="margin-top:auto">
        <h2>小春日和</h2>
        <input class="input" id="T" type="checkbox" checked />
        <ul>
            <li><a href="https://www.facebook.com/SpringDayPetShopCafe/">Facebook</a></li>
            <li><a href="https://www.instagram.com/springday_petcafe/">Instagram</a></li>
            <li><a href="https://reurl.cc/kdWbGL">Google Map</a></li>
        </ul>
        <img src="~/images//logo.png" />
    </nav>
    
    @foreach (var item in Model.Cat)
    {
        <div class="card font" style="width: 70%; margin-left: 15%; margin-bottom: 5px; ">
            <div class="card-header text-center" style="color:white;background-color:darkslateblue">
                <h3>@item.Title</h3>
            </div>
            <div class="text-center" style="background-color:antiquewhite">
                @Html.DisplayNameFor(model => model.Cat[0].ReleaseDate) :
                @Html.DisplayFor(modelItem => item.ReleaseDate)
                <br />
                @Html.DisplayNameFor(model => model.Cat[0].Content) :
                @Html.DisplayFor(modelItem => item.Content)
                <br />
                @Html.DisplayNameFor(model => model.Cat[0].Rate) :
                @Html.DisplayFor(modelItem => item.Rate)


            </div>
            <img width="500" height="380" class="card-img-top" src=@("images/c"+item.ID+".jpg") alt="Sample" />

            <div class="card-footer text-center" style="color:white;background-color:cornsilk">
                <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-primary">View</a>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a>
                <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</body>
