<style>
    .font {
        font-family: 微軟正黑體;
    }

    .n ul {
        text-align: center;
        list-style: none;
        padding-left: 0;
        padding-top: 0;
        margin-top: 0;
        margin-bottom: 22px;
        overflow: hidden;
        height: 100%;
    }

        .n ul li {
            font-family: 華康娃娃體;
            position: relative;
            display: inline-block;
            background-color: darkslateblue;
            transition: background 3s;
            border-radius: 20px;
            width: 100%;
            margin-left: 35px;
            line-height: 1.5;
            margin: 0;
            margin-bottom: 5px;
        }

        .n ul a {
            display: block;
            color: ivory;
            transition: color .3s;
            font-size: 25px;
            font-weight: 200;
        }

        .n ul li:hover {
            background: mediumorchid;
            transition: background 0.45s;
        }

            .n ul li:hover a:active, li {
                color: tomato;
            }

    .n {
        position: relative;
        width: 50vw;
        min-width: 320px;
        height: 200px;
        margin: auto;
        margin-top: 40px;
    }

        .n h2 {
            font-family: 華康娃娃體;
            position: relative;
            background: blue;
            height: 40px;
            font-weight: 200;
            color: ivory;
            justify-content: center;
            align-items: center;
            display: flex;
            flex: 1;
            transition: all .4s;
            box-shadow: 4px 4px 20px -2px rgba(0,0,0,.35);
            border-radius: 2px;
        }

        .n:hover h2 {
            transform: translateY(-2px);
            box-shadow: 2px 2px 5px -1px rgba(0,0,0,.35);
        }

    #T:checked ~ ul {
        height: 0%;
    }

    .input {
        height: 40px;
        width: 100%;
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        cursor: pointer;
    }

    
</style>
<script>
    function pic(id) {
        if (id < 16) return "images/c" + id + ".jpg";
        else
            return "images/caticon.png";
    }
</script>

